@model BeastWorkout.Models.Performance

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Performance</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Value" class="control-label"></label>
                <input asp-for="Value" class="form-control" />
                <span asp-validation-for="Value" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Id_profil" class="control-label"></label>
                <select asp-for="Id_profil" class="form-control" asp-items="@ViewBag.ListProfil">
                    <option>Sélectionne le profil</option>
                </select>
                <span asp-validation-for="Id_profil" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Id_exercice" class="control-label"></label>
                <select asp-for="Id_exercice" class="form-control" asp-items="@ViewBag.ListExercice">
                    <option>Sélectionne l'exercice</option>
                </select>
                <span asp-validation-for="Id_exercice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

