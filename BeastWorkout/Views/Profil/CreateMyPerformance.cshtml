@model BeastWorkout.Models.Performance

@{
    ViewData["Title"] = "CreateMyPerformance";
}

<link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />

<div class="container main_container">
    <div class="row align-items-center justify-content-center">
        <div class="col-md-2 text-center">
        </div>
        <div class="col-md-8 text-center">
            <h1>Ma performance</h1>
        </div>
        <div class="col-md-2 text-center">
        </div>
    </div>

    <div class="container second_container">
        <div class="container training_container my-2 text-center bg-custom text-custom">
            <div class="row align-items-center justify-content-center">
                <div class="col-md-6">
                    <div class="container my-2 text-center bg-custom text-black image-container">
                        <img src="@Url.Content(@ViewBag.Exercice.Picture)" alt="Logo" class="img-fluid image_ex">
                        <h3 class="mt-3">@ViewBag.Exercice.Name</h3>
                    </div>
                </div>
                <div class="col-md-6">
                    <form asp-action="CreateMyPerformance">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <input type="hidden" asp-for="Id_profil" class="form-control" value="@ViewBag.Id_profil" readonly />
                            <span asp-validation-for="Id_profil" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="hidden" asp-for="Id_exercice" class="form-control" value="@ViewBag.Id_exercice" readonly />
                            <span asp-validation-for="Id_exercice" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Description" class="control-label"></label>
                            <input asp-for="Description" class="form-control" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Value" class="control-label"></label>
                            <input asp-for="Value" class="form-control" />
                            <span asp-validation-for="Value" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-3">
                            <input type="submit" value="Valider" class="btn btn-primary" />
                        </div>
                        <div class="form-group mb-3"></div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

