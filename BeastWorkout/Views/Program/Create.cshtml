            </div>*@
            <div class="form-group">
                <label asp-for="Id_type_program" class="control-label"></label>
                <select asp-for="Id_type_program" class="form-control" asp-items="@ViewBag.List">
                    <option>Sélectionne le type d'entraînement</option>
                </select>
                <span asp-validation-for="Id_type_program" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Is_my_Program" /> @Html.DisplayNameFor(model => model.Is_my_Program)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
