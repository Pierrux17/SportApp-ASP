@model BeastWorkout.Models.Program

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Program</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nbtrainingperweek" class="control-label"></label>
                <input asp-for="Nbtrainingperweek" class="form-control" />
                <span asp-validation-for="Nbtrainingperweek" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Duration" class="control-label"></label>
                <input asp-for="Duration" class="form-control" />
                <span asp-validation-for="Duration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Objectif" class="control-label"></label>
                <input asp-for="Objectif" class="form-control" />
                <span asp-validation-for="Objectif" class="text-danger"></span>
            </div>
