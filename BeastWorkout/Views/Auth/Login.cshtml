@model BeastWorkout.Models.LoginForm

@{
    ViewData["Title"] = "Login";
}

<link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

<div class="container main_container">
    <div class="row align-items-center justify-content-center">
        <div class="col-md-10 text-center">
            <h1>Connexion</h1>
            <div class="container login_container d-flex justify-content-center">
                <form asp-action="Login" class="text-center">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group my-5">
                        <label asp-for="Login" class="control-label h3"></label>
                        <input asp-for="Login" class="form-control" />
                        <span asp-validation-for="Login" class="text-danger"></span>
                    </div>
                   @*  <div class="form-group my-5">
                        <label asp-for="Password" class="control-label h3"></label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div> *@
                    <div class="form-group my-5">
                        <label asp-for="Password" class="control-label h3"></label>
                        <div class="input-group password-input-container">
                            <input asp-for="Password" class="form-control" />
                            <button type="button" class="password-toggle btn btn-link input-group-text  bg-eyecolor" onclick="togglePasswordVisibility(this)">
                                <i class="bi bi-eye eye-color"></i>
                            </button>
                        </div>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group my-5">
                        <input type="submit" value="Se connecter" class="btn btn-lg my_button" />
                    </div>
                    <div class="form-group">
                        <a class="btn btn-lg my_button" asp-area="" asp-controller="Auth" asp-action="Register">Créer un compte</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<script>
    function togglePasswordVisibility(button) {
        const passwordInput = button.previousElementSibling;
        if (passwordInput.type === 'password') {
            passwordInput.type = 'text';
            button.innerHTML = '<i class="bi bi-eye-slash eye-color"></i>';
        } else {
            passwordInput.type = 'password';
            button.innerHTML = '<i class="bi bi-eye eye-color"></i>';
        }
    }
</script>
