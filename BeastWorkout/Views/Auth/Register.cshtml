@model BeastWorkout.Models.Person

@{
    ViewData["Title"] = "Register";
}

<link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

<div class="container main_container">
    <div class="row align-items-center justify-content-center">
        <div class="col-md-10 text-center">
            <h1>Inscription</h1>
            <div class="container login_container d-flex justify-content-center">
                <form asp-action="Register">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group my-5">
                        <label asp-for="Lastname" class="control-label h3"></label>
                        <input asp-for="Lastname" class="form-control" />
                        <span asp-validation-for="Lastname" class="text-danger"></span>
                    </div>
                    <div class="form-group my-5">
                        <label asp-for="Firstname" class="control-label h3"></label>
                        <input asp-for="Firstname" class="form-control" />
                        <span asp-validation-for="Firstname" class="text-danger"></span>
                    </div>
                    <div class="form-group my-5">
                        <label asp-for="Mail" class="control-labelead h3"></label>
                        <input asp-for="Mail" class="form-control" />
                        <span asp-validation-for="Mail" class="text-danger"></span>
                    </div>
                    <div class="form-group my-5">
                        <label asp-for="Login" class="control-label h3"></label>
                        <input asp-for="Login" class="form-control" />
                        <span asp-validation-for="Login" class="text-danger"></span>
                    </div>
                    @* <div class="form-group my-5">
                    <label asp-for="Password" class="control-label h3"></label>
                    <input asp-for="Password" class="form-control" type="password" autocomplete="new-password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group my-5">
                    <label asp-for="ConfirmPassword" class="control-label h3"></label>
                    <input asp-for="ConfirmPassword" class="form-control" type="password" autocomplete="new-password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div> *@
                    <div class="form-group my-5">
                        <label asp-for="Password" class="control-label h3"></label>
                        <div class="input-group password-input-container">
                            <input asp-for="Password" class="form-control password-input" type="password" autocomplete="new-password" />
                            <button type="button" class="password-toggle btn btn-link input-group-text  bg-eyecolor" onclick="togglePasswordVisibility(this)">
                                <i class="bi bi-eye eye-color"></i>
                            </button>
                        </div>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group my-5">
                        <label asp-for="ConfirmPassword" class="control-label h3"></label>
                        <div class="input-group password-input-container">
                            <input asp-for="ConfirmPassword" class="form-control password-input" type="password" autocomplete="new-password" />
                            <button type="button" class="password-toggle btn btn-link input-group-text bg-eyecolor" onclick="togglePasswordVisibility(this)">
                                <i class="bi bi-eye eye-color"></i>
                            </button>
                        </div>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group my-5">
                        <label asp-for="Id_country" class="control-label h3"></label>
                        <select asp-for="Id_country" class="form-control dropdown-list text-center" asp-items="@ViewBag.List">
                            <option>Sélectionne le pays</option>
                        </select>
                        <span asp-validation-for="Id_country" class="text-danger"></span>
                    </div>
                    <div class="form-group my-5">
                        <input type="submit" value="Valider" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

<script>
    function togglePasswordVisibility(button) {
        const passwordInput = button.previousElementSibling;
        if (passwordInput.type === 'password') {
            passwordInput.type = 'text';
            button.innerHTML = '<i class="bi bi-eye-slash eye-color"></i>';
        } else {
            passwordInput.type = 'password';
            button.innerHTML = '<i class="bi bi-eye eye-color"></i>';
        }
    }
</script>