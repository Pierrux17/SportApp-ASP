@model IEnumerable<BeastWorkout.Models.PersonProgram>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id_person)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Id_program)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Person.Firstname)
                    @Html.DisplayFor(modelItem => item.Person.Lastname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Program.Name)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Details", "Details", new {  id_person = item.Id_person, id_program = item.Id_program }) |
                    @Html.ActionLink("Delete", "Delete", new { id_person = item.Id_person, id_program = item.Id_program }, new { onclick = "return confirmDelete(" + item.Id_person + ", " + item.Id_program + ");" }) |
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    function confirmDelete(id_person, id_program) {
        if (confirm("Are you sure you want to delete this item?")) {
            window.location.href = '/PersonProgram/Delete?id_person=' + id_person + '&id_program=' + id_program;
        }
        return false;
    }
</script>

