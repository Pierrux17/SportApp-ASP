@model BeastWorkout.Models.Exercice

@{
    ViewData["Title"] = "DetailExercice";
}

<link rel="stylesheet" href="~/css/library.css" asp-append-version="true" />

<div class="container main_container">
    <div class="row align-items-center justify-content-center">
        <div class="col-md-2 text-center"></div>
        <div class="col-md-8 text-center">
            <h1>
                @Html.DisplayFor(model => model.Name)
            </h1>
        </div>
        <div class="col-md-2 text-center"></div>
    </div>

    <div class="container second_container">
        <div class="row">
            <div class="container my-2 text-center bg-custom text-custom image-container">
                <img src="@Url.Content(Model.Picture)" alt="Image" class="image_detail img-fluid">

                <div class="row justify-content-center align-items-center">
                    <div class="col-md-8">
                        <dl class="row">
                            <dt class="col-sm-12 text-center mt-4">
                                @Html.DisplayNameFor(model => model.Description)
                            </dt>
                            <dd class="col-sm-12 text-center mb-4">
                                @Html.DisplayFor(model => model.Description)
                            </dd>
                            <dt class="col-sm-12 text-center mt-4">
                                <p>Muscle(s) sollicité(s)</p>
                            </dt>
                            <dd class="col-sm-12 text-center mb-4">
                                @Html.DisplayFor(model => model.TypeExercice.Name)
                            </dd>
                        </dl>
                    </div>
                </div>

                <div class="row align-items-center justify-content-center">
                    <div class="col-md-3 btn-custom">
                        @if (@ViewBag.Id_training != null)
                        {
                            <a class="detail-link text-white text-center" asp-controller="ProgramBuilder" asp-action="AddNewExercice" asp-route-id_training="@ViewBag.Id_training" asp-route-id_exercice="@Model.Id">Ajouter l'exercice</a>
                        }
                        else if (ViewBag.Id_profil != null)
                        {
                            <a class="detail-link text-white text-center" asp-controller="Profil" asp-action="CreateMyPerformance" asp-route-id_profil="@ViewBag.Id_profil" asp-route-id_exercice="@Model.Id">Choisir exercice</a>
                        }
                        else
                        {
                            <a asp-action="Index">Back to List</a>
                        }
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
