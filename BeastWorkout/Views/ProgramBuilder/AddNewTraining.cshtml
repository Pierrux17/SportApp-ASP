@model BeastWorkout.Models.ProgramTraining

@{
    ViewData["Title"] = "AddNewTraining";
}

<h1>AddNewTraining</h1>

<h4>Choisir parmi les trainings existants</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddNewTraining">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id_training" class="control-label"></label>
                <select asp-for="Id_training" class="form-control" asp-items="@ViewBag.List">
                    <option>Sélectionne le training</option>
                </select>
                <span asp-validation-for="Id_training" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<h3><a class="nav-link text-black" asp-action="CreateMyTraining">Créer un training</a></h3>

<div>
    <a href="javascript:history.back()">Back to Trainings</a>
</div>


